{
  "manifest_version": 3,
  "name": "Persistent Text Annotator",
  "version": "0.1",
  "description": "Persistent inline annotations on webpages",

  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "dist/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/core.js"],
      "run_at": "document_idle"
    }
  ]
}
